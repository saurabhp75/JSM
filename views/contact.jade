doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Contact Us - MyCompany
    link(rel='stylesheet', href='//aui-cdn.atlassian.com/aui-adg/5.8.12/css/aui.css', media='all')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
    script(src='//aui-cdn.atlassian.com/aui-adg/5.8.12/js/aui.js', type='text/javascript')
  body.aui-page-hybrid
    section#content(role='main')
      header.aui-page-header
        .aui-page-header-inner
          .aui-page-header-main.intro-header
            h1 Welcome to MyCompany!
      .aui-page-panel.main-panel
        .aui-page-panel-inner
          section.aui-page-panel-item
            .aui-group
              .aui-item
                p
                  | Please use the form below to contact us.
                form.aui.top-label
                  each field in fields
                    .field-group.top-label
                      label(for=field.fieldId)
                        strong #{field.name}
                      input(id=field.fieldId).text.long-field(type='text', name=field.fieldId)
                  .field-group.top-label
                    label(for='email')
                      strong What is your email address?
                    input#email.text.long-field(type='text', name='email')
                  button#contact.aui-button.aui-button-primary
                    | Send
    script(src='/javascripts/contact.js')